<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Acme\HappyBundle\Entity\Users" table="users">
    <id name="id" type="bigint" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="username" type="string" column="username" length="255" nullable="true"/>
    <field name="password" type="string" column="password" length="255" nullable="true"/>
    <field name="roles" type="string" column="roles" length="255" nullable="true"/>
    <field name="salt" type="string" column="salt" length="255" nullable="true"/>
    <field name="pass" type="string" column="pass" length="255" nullable="true"/>
    <field name="facebook" type="string" column="facebook" length="255" nullable="true"/>
    <field name="mail" type="string" column="mail" length="255" nullable="true"/>
    <field name="lang" type="string" column="lang" length="20" nullable="true"/>
    <field name="active" type="integer" column="active" nullable="true"/>
    <field name="twitter" type="string" column="twitter" length="255" nullable="true"/>
  </entity>
</doctrine-mapping>
