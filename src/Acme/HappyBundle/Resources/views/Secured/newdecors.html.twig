{% extends "AcmeHappyBundle:Secured:layout.html.twig" %}

{% block content %}
	<div class="title_area_normal">Decors</div>
 
	<form  id="contact_form" action="#" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
   
		 <div class="half left text-right">
            <label class="required" for="contact_email">Name</label>
        </div>
		<div class="half left">
            {{ form_widget(form.name) }}
        </div>
		
		<div class="clear"></div>

		 <div class="half left text-right">
            <label class="required" for="form_file">File</label>
        </div>
		<div class="half left">
             {{ form_widget(form.file) }}
        </div>
		
		<div class="clear"></div>

		<div class="half left text-right">
            <label class="required" for="form_type">Type</label>
        </div>
		<div class="half left">
            {{ form_widget(form.type) }}
        </div>

		<div class="clear"></div>

		<div class="half left text-right">
            <label class="required" for="form_design">Design</label>
        </div>
		<div class="half left">
            {{ form_widget(form.design) }}
        </div>

		<div class="clear"></div>

        <div class="half left text-right">
            <label  for="form_description">Description</label>
        </div>

        <div class="half left">
            <textarea id="form_description" required="required" name="contact[description]"></textarea>
        </div>

		<div class="clear"></div>

        {{ form_row(form._token) }}
		{{ form_rest(form) }}
		<div class="clear"></div>
		
		<div class="text-center">
			<button type="submit" class="sf-button">
				<span class="border-l">
					<span class="border-r">
						<span class="btn-bg">Send</span>
					</span>
				</span>
			</button>
		</div>
		
    </form>
	
{% endblock %}

{% set code = code(_self) %}
