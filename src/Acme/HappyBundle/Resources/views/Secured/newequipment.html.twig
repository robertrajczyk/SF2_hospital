{% extends "AcmeHappyBundle:Secured:layout.html.twig" %}

{% block content %}
	<div class="title_area_normal">{{ "Nowy Sprzęt" |trans }}</div>
 
	<form  id="contact_form" action="#" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
   
		 <div class="half left text-right">
            <label class="required" for="contact_email">{{ "Nazwa" |trans }}</label>
        </div>
		<div class="half left">
            {{ form_widget(form.title) }}
        </div>
		 
		 <div class="half left text-right">
            <label class="required" for="contact_email">{{ "Producent" |trans }}</label>
        </div>
		<div class="half left">
            {{ form_widget(form.producer) }}
        </div>
		
		 <div class="half left text-right">
            <label class="required" for="contact_email">{{ "Typ" |trans }}</label>
        </div>
		<div class="half left">
            {{ form_widget(form.typ) }}
        </div>
		
		 <div class="half left text-right">
            <label class="required" for="contact_email">{{ "Nr. Seryjny " |trans }}</label>
        </div>
		<div class="half left">
            {{ form_widget(form.numbersr) }}
        </div>
		
		<div class="half left text-right">
            <label class="required" for="contact_email">{{ "Nr. Inwentarzowy" |trans }}</label>
        </div>
		<div class="half left">
            {{ form_widget(form.numberinw) }}
        </div>
		 
		
		<div class="half left text-right">
            <label class="required" for="contact_email">{{ "Oddział" |trans }}</label>
        </div>
		<div class="half left">
            {{ form_widget(form.wardid) }}
        </div>
		
		<div class="clear"></div>

        {{ form_row(form._token) }}
		{{ form_rest(form) }}
		<div class="clear"></div>
		
		<div class="text-center">
			<button type="submit" class="sf-button">
				<span class="border-l">
					<span class="border-r">
						<span class="btn-bg">{{ "Dodaj" |trans }}</span>
					</span>
				</span>
			</button>
		</div>
		
    </form>
	
{% endblock %}

{% set code = code(_self) %}
